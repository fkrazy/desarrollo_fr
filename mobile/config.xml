<?xml version='1.0' encoding='utf-8'?>
<widget id="com.desarrollowebumg" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PlanUMG</name>
    <description>
        Aplicacion para manejar las asignaciones de cursos y catedraticos
    </description>
    <author email="deswebumg@gmail.com" href="https://dwumg.azurewebsites.net">
        Equipo Desarrollo Web
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/umg_ldpi.png" density="ldpi" />
        <icon src="res/android/umg_mdpi.png" density="mdpi" />
        <icon src="res/android/umg_hdpi.png" density="hdpi" />
        <icon src="res/android/umg_xhdpi.png" density="xhdpi" />
        <icon src="res/android/umg_xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/umg_xxxhdpi.png" density="xxxhdpi" />
        <preference name="StatusBarOverlaysWebView" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
